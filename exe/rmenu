require "rmenu"
require "thor"

class RMenuCLI < Thor

  DEFAULT_CONFIG = {
    config_file: File.expand_path(File.join("~", ".rmenu.yml")),
    exec_str: true
  }

  no_commands do

    def setup
      require "pry" if options[:with_pry]
      @config = DEFAULT_CONFIG
    end

    def config
      @config
    end

  end

  desc "start", "Launch Rmenu daemon"
  option :with_pry, type: :boolean, desc: "Open a PRY session within rmenu daemon"
  def start
    setup
    rmenu_daemon = RMenu::Daemon.new config
    begin
      rmenu_daemon.start
      rmenu_daemon.pry if options[:with_pry]
      rmenu_daemon.listening_thread.join
    rescue Interrupt
      RMenu::LOGGER.info "Interrupt cathed..exiting"
    ensure
      rmenu_daemon.stop true
    end
  end

end

RMenuCLI.start ARGV
